#!/usr/bin/env bash

# Install HAProxy
sudo apt-get update
sudo apt-get install haproxy -y

# Get the hostnames of web-01 and web-02 servers
HOSTNAME1=54.144.221.234
HOSTNAME2=100.26.154.245

# Configure HAProxy
sudo cat <<EOF | sudo tee /etc/haproxy/haproxy.cfg
frontend http-in
    bind *:80
    default_backend servers

backend servers
    balance roundrobin
    server web-01 [$HOSTNAME1]-web-01:80 check
    server web-02 [$HOSTNAME2]-web-02:80 check
EOF

# Restart HAProxy
sudo service haproxy restart

